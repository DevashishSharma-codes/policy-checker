      <% if (user) { %>
        <!-- Logged in -->
        <a href="/user/logout" class="auth-button">Logout</a>
        <div class="profile" title="Profile"><%= user.username ? user.username.charAt(0).toUpperCase() : 'P' %></div>
      <% } else { %>
        <!-- Guest -->
        <a href="/user/login" class="auth-button">Login</a>
        <div class="profile" title="Profile">?</div>
      <% } %>
    </header>

    <!-- HERO -->
    <main class="hero" role="main">

      <!-- orbit wrapper (behind main text) -->
      <div class="orbit-wrap" aria-hidden="true">
        <div class="orbit" role="presentation">
          <!-- 8 items -->
          <div class="item pos0"><div class="inner">üìÑ</div></div>
          <div class="item pos1"><div class="inner">‚úÖ</div></div>
          <div class="item pos2"><div class="inner">üìë</div></div>
          <div class="item pos3"><div class="inner">üóÇÔ∏è</div></div>
          <div class="item pos4"><div class="inner">üìù</div></div>
          <div class="item pos5"><div class="inner">üîí</div></div>
          <div class="item pos6"><div class="inner">üì§</div></div>
          <div class="item pos7"><div class="inner">üìã</div></div>
        </div>
      </div>

      <!-- center content (on top) -->
      <div class="hero-inner">
